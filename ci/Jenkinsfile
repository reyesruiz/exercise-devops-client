pipeline {
	agent {
		docker {
			image 'node:8-alpine' 
		}
	}
	stages {
		stage('Build') { 
			steps {
				sh 'apk add --no-cache openssh'
				sh 'npm install -g yarn'
				sh 'yarn install --production'
				sh 'yarn build' 
				sshagent(credentials: ['lightsail']) {
					sh 'ssh -o StrictHostKeyChecking=no -l centos foobar.digitalruiz.com  "cd /opt/node_server/ ; pkill -f \"node /usr/bin/http-server -p 3000\" < /dev/null ;nohup /usr/bin/http-server -p 3000 /opt/node_server/client/ > /opt/node_server/client/log.out 2> /opt/node_server/client/log.err < /dev/null &"' 
				}
			}
		}
	}
}
